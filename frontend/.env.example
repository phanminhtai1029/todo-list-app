# Frontend Environment Variables Example
# Copy this file to .env and update with your values

# ============================
# API CONFIGURATION
# ============================
# Backend API URL
VITE_API_URL=http://localhost:8000

# WebSocket URL (for real-time updates)
VITE_WS_URL=ws://localhost:8000

# Production URLs (uncomment for production)
# VITE_API_URL=https://api.yourapp.com
# VITE_WS_URL=wss://api.yourapp.com

# ============================
# APPLICATION SETTINGS
# ============================
# Application name
VITE_APP_NAME=Todo-List App

# Application version
VITE_APP_VERSION=1.0.0

# ============================
# FEATURE FLAGS
# ============================
# Enable/disable features
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_COLLABORATION=true

# ============================
# MONITORING (Optional)
# ============================
# Sentry Error Tracking (uncomment to use)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================
# ANALYTICS (Optional)
# ============================
# Google Analytics (uncomment to use)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# ============================
# ENVIRONMENT
# ============================
VITE_ENVIRONMENT=development  # development, staging, production

# ============================
# LIMITS
# ============================
# These should match backend limits
VITE_MAX_BOARDS_PER_USER=7
VITE_MAX_CARDS_PER_BOARD=20
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
